	<!-- 本地配置 -->
	<logger name="org.springframework">
		<level value="debug" />
	</logger>
	
	<logger name="java.sql">
		<level value="debug" />
	</logger>
	
	<root>
		<level value="debug" />
		<appender-ref ref="console" />
		<appender-ref ref="file" />
	</root>
	
